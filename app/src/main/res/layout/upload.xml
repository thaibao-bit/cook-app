<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center">


        <fragment
            android:id="@+id/button_fragment1"
            android:name="com.example.learnapi.Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Title:"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/uploadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/video"
            android:padding="8dp"
            >

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Description:"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/uploadDesctiption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/video"
            android:padding="8dp"
            >
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Ingredients:"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/uploadIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/video"
            android:padding="8dp"
            >
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Directions:"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/uploadDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/video"
            android:padding="8dp"
            >
        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Image:"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imgGallery"
            />
        <Button
            android:id="@+id/btnGallery"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/block_button"
            android:text="Add picture"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnVideoGallery"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/block_button"
            android:text="Add video"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/follow_button"
            android:text="Post"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>